<?xml version="1.0" encoding="utf-8"?>
<jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/refreshLayout"
    android:layout_marginTop="?attr/actionBarSize">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/line1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/phonespeedblock"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:text="当前网速">
        </TextView>
        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/phonespeed"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="111"
            android:gravity="center_vertical|right">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/phoneflowblock"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:text="本月流量">
        </TextView>
        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/monthflow"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="111"
            android:gravity="center_vertical|right">
        </TextView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:id="@+id/scrollView">
        <com.example.test.MyListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/applistview"
            android:background="@color/white"
            android:divider="@null">
        </com.example.test.MyListView>
    </ScrollView>

</LinearLayout>

</jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout>